<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:paddingTop="10dp"
                android:paddingBottom="10dp">
    <ImageView
            android:layout_marginLeft="10dp"
            android:src="@mipmap/novel_cover"
            android:layout_width="58dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:id="@+id/item_novel_cover"
    />
    <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/rl_novel_title"
            android:layout_toRightOf="@+id/item_novel_cover"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView

                android:text="小说名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_novel_name"

        />
        <View android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="1dp"/>
        <TextView

                android:text="小说作者"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_novel_author"

        />
    </LinearLayout>
    <TextView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_toRightOf="@+id/item_novel_cover"
            android:layout_below="@+id/rl_novel_title"
            android:text="小说介绍"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_novel_desc"
            android:maxLines="3"

    />
</RelativeLayout>